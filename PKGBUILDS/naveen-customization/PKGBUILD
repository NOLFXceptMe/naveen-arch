pkgname=naveen-customization
pkgver=1.0.0
pkgrel=1
pkgdesc="Platform engineer defaults: Zero-latency HID rules and core CLI tools"
arch=('any')
license=('MIT')
depends=('solaar' 'libinput' 'usbutils')
source=('99-logitech-unifying.rules')
sha256sums=('SKIP') # Use 'updpkgsums' to automate this later

package() {
  # Install the udev rule
  install -Dm644 "${srcdir}/99-logitech-unifying.rules" \
    "${pkgdir}/etc/udev/rules.d/99-logitech-unifying.rules"
}
